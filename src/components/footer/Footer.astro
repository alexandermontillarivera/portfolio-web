<style>
	footer {
		max-width: 1200px;
		margin: 0 auto;
		text-align: center;
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 24px;
	}

	a {
		color: var(--first-color);
		transition:
			opacity 0.4s ease,
			transform 0.4s ease;
	}

	a:hover {
		opacity: 0.7;
		transform: translateY(-3px);
	}

	@media screen and (max-width: 998px) {
		footer {
			margin-bottom: 100px;
		}
	}
</style>
