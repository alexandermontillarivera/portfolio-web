---
import dayjs from "dayjs"
import Tag from "@/components/elements/Tag.astro"
import { FORMAT_DATE_EXPERIENCE } from "@/constants"
import { type IExperience } from "@/interfaces/Experience"
import { convertFirstLetterToUppercase } from "@/utils/string"

interface Props {
	data: IExperience
}

const {
	title,
	company,
	endDate,
	startDate,
	achievement,
	technologies,
	responsibilities,
} = Astro.props.data

const formatedStartDate = dayjs(startDate).format(FORMAT_DATE_EXPERIENCE)
const formattedEndDate = endDate
	? dayjs(endDate).format(FORMAT_DATE_EXPERIENCE)
	: "Presente"
---

<article class="experience-card">
	<header class="card-header">
		<div class="title-company">
			<h2>{title}</h2>
			<p>{company}</p>
		</div>
		<span class="duration">
			{convertFirstLetterToUppercase(formatedStartDate)} -
			{convertFirstLetterToUppercase(formattedEndDate)}
		</span>
	</header>
	<div class="card-content">
		<div class="responsibilities">
			<h3>Responsabilidades clave:</h3>
			<ul>
				{responsibilities.map((responsibility) => <li>{responsibility}</li>)}
			</ul>
		</div>
		{
			achievement && (
				<div class="achievement">
					<h3>Logro:</h3>
					<p>{achievement}</p>
				</div>
			)
		}
		<footer class="technologies">
			<h3>Lenguajes y tecnolog√≠as:</h3>
			<ul>
				{
					technologies.map((tech) => (
						<li>
							<Tag>{tech}</Tag>
						</li>
					))
				}
			</ul>
		</footer>
	</div>
</article>

<style>
	.experience-card {
		background-color: var(--container-color);
		border-radius: 8px;
		box-shadow: var(--box-shadow);
		width: 100%;
		transition: box-shadow 0.3s ease;
	}

	.experience-card:hover {
		box-shadow: var(--box-shadow-hover);
	}

	.card-header {
		padding: 1.5rem;
		border-bottom: 1px solid var(--border-color);
		display: flex;
		justify-content: space-between;
		align-items: flex-start;
		flex-wrap: wrap;
		gap: var(--gap-2);
	}

	.title-company h2 {
		font-size: 1.25rem;
		font-weight: bold;
		margin: 0;
		color: var(--first-color);
	}

	.title-company p {
		font-size: 1rem;
		color: var(--text-color);
		margin: 0.25rem 0 0;
	}

	.duration {
		background-color: var(--constras-color);
		padding: 0.25rem 0.5rem;
		border-radius: 4px;
		color: var(--text-color);
	}

	.card-content {
		padding: 1.5rem;
	}

	.responsibilities,
	.technologies {
		margin-bottom: 1.5rem;
	}

	.responsibilities h3,
	.technologies h3,
	.achievement h3 {
		font-size: 1rem;
		font-weight: 600;
		margin-bottom: 0.5rem;
		color: var(--text-color);
	}

	.responsibilities ul,
	.technologies ul {
		list-style-type: disc;
		padding-left: 1.5rem;
		margin: 0;
	}

	.responsibilities li,
	.technologies li,
	.achievement p {
		color: var(--text-color);
		margin-bottom: 0.25rem;
	}

	.technologies ul {
		display: flex;
		flex-wrap: wrap;
		gap: var(--gap-1);
		list-style-type: none;
		padding-left: 0;
	}

	.achievement {
		margin-bottom: 1.5rem;
	}

	@media (max-width: 480px) {
		.card-header {
			flex-direction: column;
			align-items: flex-start;
		}

		.duration {
			align-self: flex-start;
		}
	}
</style>
