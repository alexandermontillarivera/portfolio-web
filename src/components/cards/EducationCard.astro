---
import Link from "@/components/elements/Link.astro"
import Tag from "@/components/elements/Tag.astro"
import { type IEducation } from "@/interfaces/Education"
import { IconDownload } from "@tabler/icons-react"
interface Props {
	data: IEducation
}

const { title, institution, year, skills, description, certificate, image } =
	Astro.props.data

const nameDownload = `${title.replace(/ /g, "-").toLowerCase()}.pdf`
---

<article class="education-card">
	<header>
		<div class="entity">
			<img src={image} alt={title} loading="lazy" width="50" height="50" />
			<div class="entity-information-container">
				<h3 class="title">{title}</h3>
				<span class="institution">{institution}</span>
			</div>
		</div>
		<Tag>{year ?? "Actualidad"}</Tag>
	</header>

	<div class="content">
		<h4>Descrici√≥n:</h4>
		<p>{description}</p>
		<h4>Habilidades adquiridas:</h4>
		<ul>
			{skills.map((skill) => <li>{skill}</li>)}
		</ul>
	</div>
	<footer>
		{
			certificate && (
				<Link href={certificate} variant="small-flex" download={nameDownload}>
					Descargar Certificado <IconDownload />
				</Link>
			)
		}
	</footer>
</article>

<style>
	article {
		background: var(--container-color);
		border-radius: 12px;
		box-shadow: var(--box-shadow);
		display: flex;
		flex-direction: column;
		gap: 32px;
		height: 100%;
	}

	article:hover {
		box-shadow: var(--box-shadow-hover);
	}

	header {
		gap: 24px;
		display: flex;
		padding-bottom: 16px;
		justify-content: space-between;
		padding: 1.5rem;
		border-bottom: 1px solid var(--border-color);
	}

	img {
		object-fit: contain;
	}

	h3 {
		color: var(--first-color);
		font-size: 1.2rem;
		font-weight: 700;
	}

	h4 {
		font-size: 1rem;
		font-weight: 600;
		margin-bottom: 0.5rem;
		color: var(--text-color);
	}

	ul {
		list-style-type: disc;
		padding-left: 1.5rem;
		margin: 0;
	}

	p {
		margin-bottom: 12px;
	}

	footer {
		padding: 0rem 1.5rem 1rem 1.5rem;
		margin-top: auto;
		display: flex;
		justify-content: end;
	}

	.entity {
		display: flex;
		gap: 24px;
		align-items: flex-start;
	}

	.content {
		padding: 0rem 1.5rem;
	}

	.entity-information-container {
		display: flex;
		flex-direction: column;
	}

	@media screen and (max-width: 768px) {
		article {
			padding: 1rem;
		}

		header {
			padding: 1rem;
			flex-direction: column;
			align-items: center;
		}

		.entity {
			flex-direction: column;
			justify-content: center;
			align-items: center;
		}

		.entity h3 {
			margin-bottom: 24px;
		}
		.entity h3,
		.entity span {
			text-align: center;
		}

		.content {
			padding: 0rem 1rem;
		}

		footer {
			padding: 0rem 1rem 1rem 1rem;
			justify-content: center;
		}
	}
</style>
