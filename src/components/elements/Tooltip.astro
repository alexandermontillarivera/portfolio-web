---
interface Props {
	text: string
	position?: "top" | "right" | "bottom" | "left"
	backgroundColor?: string
	color?: string
}

const {
	text,
	position = "top",
	backgroundColor = "#333",
	color = "#FFF",
} = Astro.props
---

<div class="tooltip-wrapper">
	<div
		class={`tooltip tooltip-${position}`}
		style={`--tooltip-bg: ${backgroundColor}; --tooltip-color: ${color}`}
		data-tooltip={text}
	>
		<slot />
	</div>
</div>

<style>
	.tooltip-wrapper {
		position: relative;
		display: inline-block;
		width: fit-content;
	}

	.tooltip {
		position: relative;
		display: inline-block;
		cursor: pointer;
	}

	.tooltip::before {
		content: attr(data-tooltip);
		position: absolute;
		background-color: var(--tooltip-bg);
		color: var(--tooltip-color);
		padding: 0.5rem 1rem;
		border-radius: 4px;
		font-size: 0.875rem;
		white-space: normal;
		word-wrap: break-word;
		max-width: 200px;
		width: max-content;
		visibility: hidden;
		opacity: 0;
		transition: opacity 0.3s ease;
		z-index: 1000;
	}

	.tooltip::after {
		content: "";
		position: absolute;
		visibility: hidden;
		opacity: 0;
		transition: opacity 0.3s ease;
		border: 12px solid transparent;
		z-index: 1000;
	}

	.tooltip-top::before {
		bottom: calc(100% + 16px);
		left: 50%;
		transform: translateX(-50%);
	}

	.tooltip-top::after {
		bottom: 100%;
		left: 50%;
		transform: translateX(-50%);
		border-top-color: var(--tooltip-bg);
	}

	.tooltip-right::before {
		top: 50%;
		left: calc(100% + 16px);
		transform: translateY(-50%);
	}

	.tooltip-right::after {
		top: 50%;
		left: 100%;
		transform: translateY(-50%);
		border-right-color: var(--tooltip-bg);
	}

	.tooltip-bottom::before {
		top: calc(100% + 16px);
		left: 50%;
		transform: translateX(-50%);
	}

	.tooltip-bottom::after {
		top: 100%;
		left: 50%;
		transform: translateX(-50%);
		border-bottom-color: var(--tooltip-bg);
	}

	.tooltip-left::before {
		top: 50%;
		right: calc(100% + 16px);
		transform: translateY(-50%);
	}

	.tooltip-left::after {
		top: 50%;
		right: 100%;
		transform: translateY(-50%);
		border-left-color: var(--tooltip-bg);
	}

	.tooltip:hover::before,
	.tooltip:hover::after {
		visibility: visible;
		opacity: 1;
	}

	@media (max-width: 768px) {
		.tooltip::before {
			max-width: 150px;
			font-size: 0.75rem;
		}

		.tooltip-left::before,
		.tooltip-right::before {
			bottom: calc(100% + 16px);
			top: auto;
			left: 50%;
			right: auto;
			transform: translateX(-50%);
		}

		.tooltip-left::after,
		.tooltip-right::after {
			bottom: 100%;
			top: auto;
			left: 50%;
			right: auto;
			transform: translateX(-50%);
			border-color: transparent;
			border-top-color: var(--tooltip-bg);
		}
	}
</style>
